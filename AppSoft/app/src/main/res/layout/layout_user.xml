<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageUsuario"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/textViewIsNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageDoctor"
                android:layout_alignTop="@+id/imageDoctor"
                android:layout_marginStart="82dp"
                android:layout_marginTop="104dp"
                android:width="38dp"
                android:background="#1C9603"
                android:padding="2dp"
                android:text="New"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Nombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageUsuario"
                android:layout_marginStart="22dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/imageUsuario"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                tools:text="nombres" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Nombres"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/imageUsuario"
                android:textColor="@color/colorPrimaryDark"
                tools:text="fecha" />

            <TextView
                android:id="@+id/Especialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Nombres"
                android:layout_marginStart="104dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/imageUsuario"
                android:textColor="@color/colorSuccess"
                tools:text="fecha" />

            <TextView
                android:id="@+id/Turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fecha"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/imageUsuario"
                android:textColor="@color/colorAccent"
                tools:text="turno" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
